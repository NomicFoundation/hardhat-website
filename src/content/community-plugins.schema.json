{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hardhat3-community-plugins",
  "title": "Community Plugins",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "website": { "type": "string" },
          "npmPackage": { "type": "string" },
          "author": { "type": "string" },
          "authorUrl": { "type": "string" },
          "description": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "author", "authorUrl", "description", "tags"],
        "additionalProperties": false
      }
    }
  },
  "required": ["$schema", "plugins"],
  "additionalProperties": false
}
