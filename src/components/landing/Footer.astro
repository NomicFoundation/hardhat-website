---
import { Image } from "astro:assets";
import nomicLogo from "../../assets/nomic-foundation-logo.svg";
import nomicLogoDark from "../../assets/nomic-foundation-logo-dark.svg";
import { landing } from "../../config";
import Container from "./Container.astro";

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <Container>
    <div class="wrapper">
      <div class="supported-by">
        <h5 class="supported-by-title">{landing.footer.builtByText}</h5>
        <div class="logo light">
          <Image src={nomicLogo} alt={landing.footer.copyrightText} />
        </div>
        <div class="logo dark">
          <Image src={nomicLogoDark} alt={landing.footer.copyrightText} />
        </div>
      </div>
      <h5 class="subtitle">
        Copyright {currentYear}
        {landing.footer.copyrightText} |
        <a href={landing.footer.privacyPolicyUrl} class="privacy-policy-link">
          {landing.footer.privacyPolicyText}
        </a>
      </h5>
    </div>
  </Container>
</footer>

<style lang="sass">
  @use '../../styles/mixins' as *

  .footer
    padding: 90px 0
    width: 100%

  .wrapper
    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-between
    gap: 34px

    +laptop
      flex-direction: row

  .logo
    display: block

    &:global(.dark)
      display: none

    +dark
      &:global(.dark)
        display: block

      &:global(.light)
        display: none

    img
      max-height: 24px

      +tablet
        max-height: 32px

      +laptop
        max-height: none

  .supported-by
    display: flex
    align-items: center
    gap: 18px

    +laptop
      gap: 12px

  .supported-by-title
    color: var(--hh-gray920)
    font-family: var(--font-base)
    font-size: 12px
    font-style: normal
    font-weight: 400
    line-height: 1.4
    text-align: center
    margin: 0

    +dark
      color: var(--hh-gray0)

    +tablet
      font-size: 16px

  .subtitle
    color: var(--hh-gray920)
    font-family: var(--font-base)
    font-size: 12px
    font-style: normal
    font-weight: 400
    line-height: 1.4
    letter-spacing: 0.02em
    text-align: center
    margin: 0

    +dark
      color: var(--hh-gray0)

    +tablet
      font-size: 14px

    +laptop
      font-size: 16px

  .privacy-policy-link
    cursor: pointer
    margin-left: 4px
    color: inherit
    text-decoration: none

    &:hover
      opacity: 0.8
</style>
