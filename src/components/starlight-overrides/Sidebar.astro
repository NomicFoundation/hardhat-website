---
import Default from "@astrojs/starlight/components/Sidebar.astro";
import TopicsDropdown from "./TopicsDropdown.astro";
---

{/* Render the topics dropdown menu. */}
<TopicsDropdown />
{/* Render the default sidebar. */}
<Default><slot /></Default>

{/* Make the the nested group labels have the same size as links */}
{/* Based on SidebarSublist.astro of @astrojs/starlight@0.36.0 */}
<style is:global>
  /*
    The SidebarSublist.astro component only sets the font-size to:
      - `.large` without any media query
      - `a` with a media query
      - `.large` with the same media query

    We reset that behavior by unseting the font-size of large without
    any media query, and by setting `.large`'s font-size to match `a`'s
    font-size with the media query.
  */

  .sidebar-content details details .group-label > .large {
    font-size: unset;
  }

  @media (min-width: 50rem) {
    .sidebar-content details details .group-label > .large {
      font-size: var(--sl-text-sm);
    }
  }
</style>
